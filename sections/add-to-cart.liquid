<section id="add-to-cart-{{ section.id }}" data-section="{{ section.id }}">
  {{ 'section-add-to-cart.css' | asset_url | stylesheet_tag }}
  {%- assign product_form_id = 'product-form-' | append: section.id -%}
  {%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: calc({{ section.settings.padding_top }}px * 0.75);
      padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
    }
    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
  {%- endstyle -%}
  <div class="page-width section-{{ section.id }}-padding">
    <div class="cta-wrapper">
      <div class="cta-button">
        <div {{ block.shopify_attributes }}>
          <product-form class="product-form">
            {%- form 'product', product, id: product_form_id, class: 'form', novalidate: 'novalidate', data-type: 'add-to-cart-form' -%}
            <div class="sealsubs-target-element" data-product="{{ product | json | escape }}" data-handle="{{ product.handle }}"></div>
            <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}" disabled>
            <div data-payment-button class="b-get-btn">
              <button type="submit" name="add" class="get-btn button"
                {% if product.selected_or_first_available_variant.available == false %}disabled{% endif %}>
                <span>
                  <input type="hidden" name="return_to" value="/checkout/" />
                  {{ 'products.product.add_to_cart' | t }}
                </span>
                <div class="loading-overlay__spinner hidden">
                  <svg aria-hidden="true" focusable="false" role="presentation" class="spinner" viewBox="0 0 66 66"
                xmlns="http://www.w3.org/2000/svg">
                    <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
                  </svg>
                </div>
              </button>
            </div>
            <div data-sticky-atc-wrapper id="sticky-atc" class="container sticky-form-wrapper">
              <div class="sticky-form">
                {%- unless product.has_only_default_variant -%}
                <div class="sticky-form-select select">
                  <variant-selects class="no-js-hidden" data-section="{{ section.id }}" data-url="{{ product.url }}" {{ block.shopify_attributes }}>
                    {%- for option in product.options_with_values -%}
                      <div class="product-form__input product-form__input--dropdown">
                        <div class="select">
                          <select id="Option-{{ section.id }}-{{ forloop.index0 }}"
                            class="select__select"
                            name="options[{{ option.name | escape }}]"
                            form="{{ product_form_id }}"
                          >
                            {%- for value in option.values -%}
                              <option value="{{ value | escape }}" {% if option.selected_value == value %}selected="selected"{% endif %}>
                                {{ value }}
                              </option>
                            {%- endfor -%}
                          </select>
                          {% render 'icon-caret' %}
                        </div>
                      </div>
                    {%- endfor -%}
  
                    <script type="application/json">
                      {{ product.variants | json }}
                    </script>
                  </variant-selects>
                </div>
                {%- endunless -%}
                <button type="submit" name="add" class="button get-btn"
                  {% if product.selected_or_first_available_variant.available == false %}disabled{% endif %}>
                  <span>ADD TO CART</span>
                </button>
              </div>
            </div>
            {%- endform -%}
          </product-form>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Show Sticky ATC on Scroll past the ATC Button
  const atcWrapper = document.querySelector('[data-sticky-atc-wrapper]')
  const targetATCButtons = document.querySelector('[data-payment-button]')

  const intersectionObserver = new IntersectionObserver(function(entries) {
    const target = targetATCButtons.getBoundingClientRect().top; 
    if(entries[0].isIntersecting) {
        if(atcWrapper.classList.contains('show')) {
            atcWrapper.classList.remove('show')
        }
    } else if(entries[0].isIntersecting === false && target < 0) {
        if(atcWrapper.classList.contains('show') === false) {
            atcWrapper.classList.add('show')
        }
    }
  })
  intersectionObserver.observe(targetATCButtons);

</script>

{% schema %}
{
  "name": "Add to cart",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 32,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 32,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 0
    }
  ]
}
{% endschema %}