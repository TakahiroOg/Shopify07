<section id="Past-selection-{{ section.id }}" class="section-past-selection" data-section="{{ section.id }}">
  {%- style -%}
  .section-past-selection {
    padding-top: calc({{ section.settings.padding_top }}px * 0.75);
    padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
  }
  
  @media screen and (min-width: 750px) {
    .section-past-selection {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  {%- endstyle -%}
  <div class="past-box-head page-width">
    <h2>Past Selections</h2>
  </div>
  <div class="past-box-sec page-width">

    {% for block in section.blocks %}

      <div class="past-box">
      {% case block.type %}
        {% when 'product' %}
          <a href="{{ block.settings.product.url }}">
            {% if block.settings.product_img %}
              <img src="{{ block.settings.product_img | image_url: width: 535 }}" alt="" width="535" height="auto" loading="Lazy">
            {% else %}
              <img src="{{ block.settings.product.featured_image | image_url: width: 535 }}" alt="" width="535" height="auto" loading="Lazy">
            {% endif %}
            <h4>{{ block.settings.product_title }}</h4>
          </a>
    
      {% endcase %}
      </div>

    {% endfor %}

  </div>
</section>
{% schema %}
{
  "name": "past selection",
  "max_blocks": 2,
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "id": "product_title",
          "type": "text",
          "label": "produt title"
        },
        {
          "id": "product",
          "type": "product",
          "label": "product"
        },
        {
          "id": "product_img",
          "type": "image_picker",
          "label": "product image"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "padding top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "padding bottom",
      "default": 52
    }
  ]
}
{% endschema %}